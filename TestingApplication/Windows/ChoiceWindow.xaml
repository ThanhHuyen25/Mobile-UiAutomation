<Window x:Class="TestingApplication.ChoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestingApplication"
        mc:Ignorable="d"
        Title="Choice Basis" MinHeight="100" Height="150" MaxHeight="300" MinWidth="250" Width="400" MaxWidth="500">
    <Grid Margin="0,0,-8,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="134*"/>
            <ColumnDefinition Width="122*"/>
            <ColumnDefinition Width="11*"/>

        </Grid.ColumnDefinitions>


        <Button Content="Desktop" x:Name="btn_desktop"  HorizontalAlignment="Left"
                VerticalAlignment="Center" Width="100" Click="BtnDesk_Click" Height="41" Grid.Column="0" RenderTransformOrigin="0.867,0.05" Margin="10,39,0,39"/>
        <Button Content="Web" x:Name ="btn_web"  VerticalAlignment="Center" Click="BtnWeb_Click" Height="41" RenderTransformOrigin="0.474,0.149" Margin="19,39" Grid.Column="1"/>
        <Button Content="Android" x:Name="btn_android" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Width="89" Click="BtnAndroi_Click" Height="41" Margin="10,39,0,39"/>

    </Grid>
</Window>
