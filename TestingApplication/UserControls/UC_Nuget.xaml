<UserControl x:Class="TestingApplication.UC_Nuget"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestingApplication"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="UserControl_Loaded">
    <StackPanel>
        <TextBlock Margin="0,0,0,10">Nuget.exe fiel path</TextBlock>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBox Grid.Column="0" x:Name="txt_nuget_file_path" Margin="0,0,15,0" VerticalContentAlignment="Center"/>
            <Button Grid.Column="1" x:Name="btnBrowse_nuget_file" Content="Browse..." HorizontalAlignment="Center" VerticalAlignment="Center" Width="76" Height="24"
                            Click="BtnBrowse_Click"/>
        </Grid>
    </StackPanel>
</UserControl>
